#!/bin/bash

echo "ARGS: $*"
which convert
if [[ "$?" != "0" ]]
then
    echo "The application \"convert\" is necessary for assembling montage" 1>&2
fi

TMP=$PWD/imglist.$RANDOM.txt

MOVIE_FILE=$1; shift

echo "convert -delay 20 -loop 0 $* $MOVIE_FILE"
convert -delay 20 -loop 0 $* $MOVIE_FILE

if [ -d $HOME/public_html ]
then
    cp $MOVIE_FILE $HOME/public_html
fi

